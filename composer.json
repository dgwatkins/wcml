{
  "name": "wcml/woocommerce-multilingual",
  "description": "Allows running fully multilingual e-commerce sites using WooCommerce and WPML.",
  "license": "GPLv2",
  "homepage" : "https://wpml.org/documentation/related-projects/woocommerce-multilingual/",
  "type": "wordpress-plugin",
  "authors": [
    {
      "name": "Mihai Grigori",
      "email": "mihai@wpml.org"
    }
  ],
  "config": {
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "ssh://git@git.onthegosystems.com:10022/installer/installer.git"
    },
    {
      "type": "vcs",
      "url": "ssh://git@git.onthegosystems.com:10022/shared/otgs-build-tools.git"
    },
    {
      "type": "vcs",
      "url": "ssh://git@git.onthegosystems.com:10022/shared/otgs-build-tools-ci.git"
    },
    {
      "type": "vcs",
      "url": "ssh://git@git.onthegosystems.com:10022/shared/otgs-unit-tests-framework.git"
    },
    {
      "type": "vcs",
      "url": "ssh://git@git.onthegosystems.com:10022/wcml/codeception-tests.git"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "roave/security-advisories": "dev-master",
    "otgs/installer" : "dev-master",
    "xrstf/composer-php52": "1.*",
    "twig/twig": "~1.0"
  },
  "require-dev": {
    "otgs/unit-tests-framework": "dev-develop",
    "otgs/build-tools": "~0.1",
    "otgs/build-tools-ci": "dev-develop",
    "symfony/dom-crawler": "^3.1",
    "symfony/css-selector": "^3.1",
    "otgs/wcml-codeception-tests": "dev-master",
    "squizlabs/php_codesniffer": "^2.8",
    "wimg/php-compatibility": "^7.1",
    "simplyadmire/composer-plugins": "^2.1",
    "wp-coding-standards/wpcs": "^0.10.0"
  },
  "scripts": {
    "post-install-cmd": [
      "xrstf\\Composer52\\Generator::onPostInstallCmd",
      "@php-compatibility-install"
    ],
    "post-update-cmd": [
      "xrstf\\Composer52\\Generator::onPostInstallCmd",
      "@php-compatibility-install"
    ],
    "php-compatibility-install": [
      "rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/PHPCompatibility",
      "rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress",
      "rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Core",
      "rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Docs",
      "rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Extra",
      "rm -rf vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-VIP",
      "cp -rp vendor/wimg/php-compatibility vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/PHPCompatibility",
      "cp -rp vendor/wp-coding-standards/wpcs/WordPress vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress",
      "cp -rp vendor/wp-coding-standards/wpcs/WordPress-Core vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Core",
      "cp -rp vendor/wp-coding-standards/wpcs/WordPress-Docs vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Docs",
      "cp -rp vendor/wp-coding-standards/wpcs/WordPress-Extra vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-Extra",
      "cp -rp vendor/wp-coding-standards/wpcs/WordPress-VIP vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/WordPress-VIP"
    ],
    "post-autoload-dump": [
      "xrstf\\Composer52\\Generator::onPostInstallCmd"
    ]
  },
  "autoload-dev": {
    "classmap": [
      "tests/phpunit/stubs"
    ]
  },
  "autoload": {
    "classmap": [
      "inc",
      "compatibility"
    ]
  }
}
