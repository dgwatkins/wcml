	<!--	<rule ref="WordPress.DB.PreparedSQLPlaceholders.LikeWildcardsInQuery"/>-->
	<!--	<rule ref="WordPress.DB.PreparedSQLPlaceholders.QuotedSimplePlaceholder"/>-->
</ruleset>